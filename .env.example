# Database Configuration
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# AI Provider (choose one)
AI_PROVIDER=gemini  # or 'openai'

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here

# Google Sheets Sync (optional)
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_ID=your-sheet-id-here
GOOGLE_SERVICE_ACCOUNT_KEY=path/to/service-account.json

# Scraper Configuration
SCRAPER_CONCURRENCY=3
SCRAPER_TIMEOUT_MS=30000
JOBS_PER_PLATFORM=50

# Cron Schedule (default: every 4 hours)
CRON_SCHEDULE=0 */4 * * *

# Scraping Configuration
SCRAPING_MODE=past_day  # 'past_day' or 'past_week'
MIN_SALARY_INR=1200000  # Minimum 12 LPA
TARGET_ROLES=Platform Engineer,Cloud Engineer,DevOps Engineer,SRE

# AI-Assisted Filtering
USE_AI_FILTER=true  # Use AI to resolve ambiguous jobs during scraping

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# User Configuration (for single-user mode)
DEFAULT_USER_EMAIL=your-email@example.com
